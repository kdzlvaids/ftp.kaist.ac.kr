#!/usr/bin/env bash
# expire-tmp -- Temporary directory cleaning script
# 
# Created: 2007-04-09
# 
# Written by Jaeho Shin <netj@sparcs.org>.
# (C) 2007, Geoul Project. (http://ftp.kaist.ac.kr/geoul)

days=15

. /mirror/lib/geoul.sh
running_as_mirror_admin "$@"

cd /mirror/ftp/pub/.tmp

# remove old temporary files
find . -mtime +$days -exec rm -rf {} \;
