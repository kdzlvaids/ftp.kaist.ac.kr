## periodic jobs for Geoul system
SHELL=/bin/sh
PATH=/mirror/bin:/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin

# check services
*/2 *	* * *	root	exec watch-services

# keep in sync
*/3 *	* * *	mirror	exec maintain-sync >/dev/null
0 16	* * *	mirror	exec check-anomalies
@reboot 	mirror  exec rm -f /mirror/pkgs/*/lock{,.*}

# update data to show
* *	* * *	mirror	exec publish-pkgstat.xml
0 *	* * *	mirror	exec nice publish-pkgindex
51 *	* * *	mirror	exec nice analyze-usages
47 */3	* * *	mirror	exec nice update-ls-lR
0 0	* * *	root	exec update-rsyncd.conf
11 */6  * * *	mirror	exec nice measure-sizes
17 */6  * * *	mirror	exec nice update-size.graphs
