set -e

# See rrdgraph, rrdgraph_graph, rrdgraph_rpn, rrdgraph_examples

defs=()
while read -r; do
    defs=("${defs[@]}" "$REPLY")
done
rrdtool graph --rigid --slope-mode --imgformat PNG --interlaced \
    --lower-limit 0 "$@" "${defs[@]}" >/dev/null
